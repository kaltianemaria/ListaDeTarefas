@using ListaDeTarefas.Model

@model Tarefa

@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="container">
    <h2>Editar Tarefa</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataDeConclusao" class="control-label"></label>
            <input asp-for="DataDeConclusao" class="form-control" />
            <span asp-validation-for="DataDeConclusao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Concluida" /> Concluída
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-default">Voltar para Lista</a>
        </div>
    </form>
</div>
